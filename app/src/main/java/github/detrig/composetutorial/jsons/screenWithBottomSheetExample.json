{
  "type": "screen",
  "id": "cart_screen",
  "name": "CartScreen",
  "background": "#FFFFFF",
  "topBar": [

  ],
  "bottomBar": [

  ],
  "content": [
    {
      "type": "button",
      "id": "openPromo",
      "text": "Открыть bottomSheet",
      "actions": [
        { "action": "showBottomSheet", "targetId": "sheetExample" }
      ]
    },
    {
      "type": "bottomSheet",
      "id": "sheetExample",
      "dismissible": true,
      "children": [
        {
          "type": "column",
          "modifier": { "padding": { "start": 16, "end": 16, "top": 24, "bottom": 24 } },
          "children": [
            {
              "type": "text",
              "text": "Хотите скидку ?",
              "style": { "fontSize": 20, "fontWeight": "bold" },
              "modifier": { "padding": { "bottom": 12 } }
            },
            {
              "type": "textField",
              "id": "emailInput",
              "placeholder": "Введите email",
              "singleLine": true,
              "style": { "fontSize": 16, "color": "#000000" },
              "actions": [
                { "action": "set_value", "targetId": "emailInput" }
              ]
            },
            {
              "type": "button",
              "text": "Закрыть bottom sheet",
              "style": {
                "background": "#965EEB",
                "textColor": "#FFFFFF",
                "shape": { "cornerRadius": 12 }
              },
              "modifier": { "height": "48", "fillMaxWidth": true },
              "actions": [
                { "action": "hideBottomSheet", "targetId": "sheetExample" }
              ]
            }
          ]
        }
      ]
    }
  ],
  "snackbars": [
    {
      "type": "snackbar",
      "id": "deleteCartItemSnackbar",
      "text": "Товар удалён из корзины",
      "actionText": "Вернуть",
      "actions": [
        { "action": "restoreItem", "targetId": "cart_item" }
      ]
    }
  ]
}
